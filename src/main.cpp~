#include <iostream>
#include <cmath>
#include "../eigen/Eigen/Dense"
#include <vector>

double _ALAT = 3.23; // Angstrom
double _CLAT = 5.165;

struct{
  Eigen::Vector3f X, Y, Z;
  X << _ALAT, 0.0, 0.0; // 1/3[11-20]
  Y << 0.0, _CLAT, 0.0; // [0001]
  Z << 0.0, 0.0, sqrt(3.0) * _ALTA; // [1-100]

  std::vector<Eigen::Vector3f> motif;
  motif.push_back(Eigen::Vector3f (0.0, 0.0, 0.0));   //A-plane
  motif.push_back(Eigen::Vector3f (0.0, 0.5, 1./3.)); //B-plane
  motif.push_back(Eigen::Vector3f (0.5, 0.0, 0.5));   //A-plane
  motif.push_back(Eigen::Vector3f (0.5, 0.5, 2./3.)); //B-plane

}ZrUnitCell;

